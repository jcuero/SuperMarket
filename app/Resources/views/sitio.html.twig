{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
               '@SMAdminBundle/Resources/public/css/bootstrap.min.css'
               '@SMAdminBundle/Resources/public/css/dashboard.css'
               output='css/backend.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="{{asset('font-awesome/css/font-awesome.min.css')}}">
    <link rel="stylesheet" href="{{asset('Flat-UI-master/css/includes-fonts.css')}}">
    {% endstylesheets %}


    <script type="text/javascript">
    </script>
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                {% block menu %}

                {% set activo = 'active' %}

                    <div class="header">
                        <ul class="nav nav-pills pull-right">
                            <li class=""><a href="{{ path('sm_sitio') }}">Inicio</a></li>
                            <li class=""><a href="{{ path('sm_sitio_incidente') }}">Incidente</a></li>
                            <li class=""><a href="{{ path('sm_sitio_incidente') }}">Quienes somos</a></li>
                             <li class=""><a href="{{ path('sm_sitio_incidente') }}">Contact√©nos</a></li>
                        </ul>
                        <h3 class="text-muted">Super Market</h3>
                    </div>
                {% endblock %}

                {% block contenedor %}

                    {% block info %}
                    <!-- mostramos todos los flash bag existentes -->
                        {% for mensaje in app.session.flashbag.get('success') %}
                            <div class="alert alert-success">
                                {{ mensaje }}
                            </div>
                        {% endfor %}

                        {% for mensaje in app.session.flashbag.get('error') %}
                            <div class="alert alert-danger">
                                {{ mensaje }}            
                            </div>
                        {% endfor %}
                        <!-- terminamos de mostrar los mensajes -->
                    {% endblock %}
                    
                    {% block contenido %}
                    {% endblock %}
                {% endblock %}

            </div>
        </div>
    </div>

{% endblock %}