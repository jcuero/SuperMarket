<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %} {% endblock %} | SuperMarket</title>

        {% block stylesheets %}
            {% stylesheets
                       '@SMAdminBundle/Resources/public/css/bootstrap.min.css'
                       '@SMAdminBundle/Resources/public/css/dashboard.css'
                       output='css/backend.css' %}
            <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
            <link rel="stylesheet" href="{{asset('font-awesome/css/font-awesome.min.css')}}">
            <link rel="stylesheet" href="{{asset('Flat-UI-master/css/includes-fonts.css')}}">
            {% endstylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        {% block body %}

            <div class="container-fluid container-sm">
                <div class="row">
                    <div class="main">

                        {% block menu %}
                        {% endblock %}

                        {% block contenedor %}
                            {% block info %}
                                <!-- mostramos todos los flash bag existentes -->
                                {% for mensaje in app.session.flashbag.get('success') %}
                                    <div class="alert alert-success">
                                        {{ mensaje }}
                                    </div>
                                {% endfor %}

                                {% for mensaje in app.session.flashbag.get('error') %}
                                    <div class="alert alert-danger">
                                        {{ mensaje }}            
                                    </div>
                                {% endfor %}
                                <!-- terminamos de mostrar los mensajes -->
                            {% endblock %}

                            {% block contenido %}
                            {% endblock %}
                        {% endblock %}

                    </div>
                </div>
            </div>

            {% block javascripts %}
                <script src="{{asset('js/jquery.min.js')}}"></script>
                <script src="{{asset('js/bootstrap.min.js')}}"></script>                

                {% block jsContext %}
                {% endblock %}
            {% endblock %}
        {% endblock %}

    </body>
</html>
