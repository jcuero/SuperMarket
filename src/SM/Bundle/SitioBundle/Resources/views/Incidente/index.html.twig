{% extends "sitio.html.twig" %}
{% block title %} Clientes {% endblock %}

{% block contenido %}

    <ol class="breadcrumb">
        <li><a href="{{ path('sm_sitio') }}">Inicio</a></li>
        <li><a href="{{ path('sm_sitio_incidente') }}">Incidente</a></li>
        <li class="active">Reportar</li>
    </ol>  

    <!-- Formulario -->
    <form class="form-new" role="form" action="{{ path('sm_sitio_incidente_new') }}" method="POST">
        {{ form_errors(formulario) }}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Informaci√≥n Personal</h3>
            </div>
            <div class="panel-body"> 

                <div class="row">
                    <div class="col-sm-4">
                        {{ form_widget(formulario.tipoIncidente) }}
                    </div>
                    <div class="col-sm-4">
                    </div>
                    <div class="col-md-4 col-md-offset-0">
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        {{ form_widget(formulario.descripcion) }}
                    </div>
                </div>

            </div>
        </div>      

        <div class="sub-panel">
            <div class="text-left">
                {{ form_widget(formulario.confirmarRegistro) }}
                <a href=" {{ path('sm_sitio') }} ">
                    <button type="button" class="btn btn-default">Cancelar</button>
                </a>
            </div>
        </div>  

        {{ form_rest(formulario) }}


    </form>
    <!-- Fin formulario -->


{% endblock %}