{% extends "backend.html.twig" %}
{% block title %} Editar empleado {% endblock %}
{% block activoEmpleado %} "activo" {% endblock %}


{% block contenido %}

    <ol class="breadcrumb">
        <li><a href="{{ path('sm_admin_portada') }}">Inicio</a></li>
        <li><a href="{{ path('sm_admin_empleado') }}">Empleado</a></li>
        <li class="active">Editar</li>
    </ol>  

    <!-- Formulario -->
    <form class="form-new" role="form" action="{{ path('sm_admin_empleado_edit', { 'id': empleado.id })}}" method="POST">

    {{ form_errors(formulario) }}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Información Básica</h3>
            </div>
            <div class="panel-body"> 

                <div class="row">
                    <div class="col-sm-4">
                        {{ form_widget(formulario.cedula) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(formulario.nombres) }}
                    </div>
                    <div class="col-md-4 col-md-offset-0">
                        {{ form_widget(formulario.apellidos) }}
                    </div>
                </div>

            </div>
        </div>      

        <div class="sub-panel">
            <div class="text-left">
                {{ form_widget(formulario.confirmarRegistro) }}
                <a href="{{ path('sm_admin_empleado') }}">
                    <button type="button" class="btn btn-default">Cancelar</button>
                </a>
            </div>
        </div>  

        {{ form_rest(formulario) }}
            

    </form>
    <!-- Fin formulario -->


{% endblock %}