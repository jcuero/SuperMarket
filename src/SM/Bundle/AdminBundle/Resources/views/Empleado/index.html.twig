{% extends "backend.html.twig" %}
{% block title %} Empleados {% endblock %}

{% block contenido %}

    <div class="sub-header">
        <div class="col-lg-3 btn-search">
            <div class="input-group">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <a href=" path('sm_admin_empleado_search') " class="btn btn-default" role="button">
                        Buscar
                    </a>
                </span>
            </div>
        </div>
        <div class="text-right">
            <a href="{{ path('sm_admin_empleado_new') }}">
                <button type="button" class="btn btn-danger">Agregar un empleado</button>
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class='table table-striped table-hover table-bordered'>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cedula</th>
                    <th>Nombre completo</th>
                    <td>Acciones</td>
                </tr>
            </thead>

            <tbody>
                {% for empleado in empleadosPaginados %}
                    <tr>
                        <td> {{ loop.index }}</td>
                        <td>{{ empleado.cedula }}</td>
                        <td>{{ empleado.nombreCompleto }}</td>
                        <td class="td-no-hover">
                            <div class="btn-group btn-group-sm">
                              <a href="{{ path('sm_admin_empleado_edit', {'id': empleado.id}) }}" class="btn btn-default" role="button">
                                <i class="fa fa-pencil-square-o"></i>
                              </a>
                              <a href="{{ path('sm_admin_empleado_delete', {'id': empleado.id} ) }}" class="btn btn-default" role="button">
                                <i class="fa fa-trash-o"></i>
                              </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# incluimos el paginador  #}
        {{ knp_pagination_render(empleadosPaginados) }}

    </div>

{% endblock %}